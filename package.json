{
	"name": "full-client-server-sveltekit",
	"version": "1.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./plugin": {
			"types": "./dist/plugin.d.ts",
			"svelte": "./dist/plugin.js",
			"import": "./dist/plugin.js",
			"default": "./dist/plugin.js"
		},
		"./ws-events": {
			"types": "./dist/ws-events.d.ts",
			"svelte": "./dist/ws-events.js",
			"import": "./dist/ws-events.js",
			"default": "./dist/ws-events.js"
		}
	},
	"typesVersions": {
		">4.0": {
			"plugin": [
				"./dist/plugin.d.ts"
			],
			"ws-events": [
				"./dist/ws-events.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@carlosv2/adapter-node-ws": "^0.1.4",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.22.6",
		"@sveltejs/package": "^2.2.1",
		"@types/ws": "^8.5.4",
		"get-tsconfig": "^4.7.0",
		"publint": "^0.1.9",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unplugin-ast": "^0.7.0",
		"vite": "^4.4.9",
		"ws": "^8.13.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"events": "^3.3.0"
	},
	"keywords": [
		"sveltekit",
		"web-socket",
		"WebSocket",
		"typescript",
		"node",
		"server",
		"browser",
		"blitz"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/SBHattarj/full-client-server-sveltekit"
	}
}
